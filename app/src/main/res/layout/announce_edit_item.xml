<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm121">
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm120"
            app:contentView="@+id/content"
            app:rightMenuView="@+id/right">
        <RelativeLayout
                android:id="@+id/content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_announce_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm025"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/dm030"
                    android:textColor="@color/gray_3"/>
            <TextView
                    android:id="@+id/tv_announce_time"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm017"
                    android:textSize="@dimen/dm022"
                    android:textColor="@color/gray_9"/>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="@dimen/dm122"
                    android:layout_height="match_parent"
                    android:background="@mipmap/kickout_pink_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm041"
                    android:text="删除"
                    android:textColor="@color/red"/>
        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
        <View
                style="@style/view_line"/>
</RelativeLayout>