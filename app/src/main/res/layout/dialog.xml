<com.lidroid.mutils.adbp.AdapLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/dm120"
            android:layout_height="@dimen/dm120"
            android:background="@drawable/sp_dialog">

            <ProgressBar
                android:layout_width="@dimen/dm100"
                android:layout_height="@dimen/dm100"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/common_custom_progressbar"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/dm095"
                android:layout_height="@dimen/dm095"
                android:layout_centerInParent="true"
                android:background="@drawable/sp_white_round"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/dm072"
                android:layout_height="@dimen/dm072"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:visibility="gone" />


            <com.lidroid.mutils.views.ColorArcProgressBar
                android:id="@+id/capb_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0%"
                android:textColor="#999"
                android:textSize="@dimen/dm020"
                android:visibility="gone" />

            <!--蓝色转圈-->
            <ProgressBar
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="@dimen/dm100"
                android:layout_height="@dimen/dm100"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:visibility="gone" />

            <ProgressBar
                android:layout_width="@dimen/dm060"
                android:layout_height="@dimen/dm060"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dm010"
                android:indeterminate="false"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/rotate_dialog"
                android:indeterminateOnly="true"
                android:padding="@dimen/dm010" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dm020"
                android:text="加载中..."
                android:textColor="#999"
                android:textSize="@dimen/dm014" />

            <!--progressBarStyle-->
            <!--progressBarStyleHorizontal-->
            <!--progressBarStyleInverse-->
            <!--progressBarStyleLarge-->
            <!--progressBarStyleLargeInverse-->
            <!--progressBarStyleSmall-->
            <!--progressBarStyleSmallInverse-->
            <!--progressBarStyleSmallTitle-->

        </RelativeLayout>
    </RelativeLayout>
</com.lidroid.mutils.adbp.AdapLayout>