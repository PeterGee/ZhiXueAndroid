<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm024"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你大大"
                android:textColor="@color/blue"
                android:textSize="@dimen/dm026" />

            <TextView
                android:id="@+id/tv_live_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/login_input_bg"
                android:paddingBottom="@dimen/dm005"
                android:paddingLeft="@dimen/dm010"
                android:paddingRight="@dimen/dm010"
                android:paddingTop="@dimen/dm005"
                android:text="直播中"
                android:textColor="@color/white"
                android:textSize="@dimen/dm022"
                android:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_cost_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_box_bg"
                android:padding="@dimen/dm008"
                android:text="费用"
                android:textColor="@color/red_checked"
                android:textSize="@dimen/dm024" />

            <TextView
                android:id="@+id/tv_cost_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/orange_box_bg"
                android:padding="@dimen/dm005"
                android:text="赏金50"
                android:textColor="@color/orange"
                android:textSize="@dimen/dm024"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_name1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="艺术馆学校艺术博物馆"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/dm032"
                android:visibility="gone" />

            <!--<TextView-->
            <!--android:id="@+id/tv_status"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/dm008"-->
            <!--android:background="@drawable/red_box_bg"-->
            <!--android:text="费用"-->
            <!--android:textColor="@color/red_checked"-->
            <!--android:textSize="@dimen/dm024" />-->

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017-12-12 12:99"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dm026" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_marginTop="@dimen/dm010"
            android:lineSpacingExtra="@dimen/dm010"
            android:text="艺术博物馆学校艺术博馆学校艺术博物馆学校艺术博物馆学校艺术博物馆学校"
            android:textColor="@color/gray_5d"
            android:textSize="@dimen/dm030" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_collect_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览 20"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/dm030" />

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:text="评论 999"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/dm030" />

            <TextView
                android:id="@+id/tv_peep_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:text="偷看 20"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/dm030" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>