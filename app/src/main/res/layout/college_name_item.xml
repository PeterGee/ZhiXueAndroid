<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/dm030"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_head"
            android:layout_width="@dimen/dm124"
            android:layout_height="@dimen/dm092"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dm050"
            />

        <TextView
            android:id="@+id/tv_college_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm028"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/dm028" />

    </LinearLayout>
</LinearLayout>