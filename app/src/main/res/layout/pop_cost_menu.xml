    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cost_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm105"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/dm032"/>

        <EditText
            android:id="@+id/et_cost"
            android:layout_width="@dimen/dm210"
            android:layout_height="@dimen/dm080"
            android:background="@drawable/action_neophyte_bg"
            android:gravity="center"
            android:hint="金额"
            android:inputType="numberDecimal"
            android:lines="1"
            android:padding="@dimen/dm023"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/dm030"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="@dimen/dm032"/>

    </LinearLayout>
</LinearLayout>