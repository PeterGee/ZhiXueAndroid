<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/iv_medal_pic"
            android:layout_marginTop="@dimen/dm036"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_width="@dimen/dm060"
            android:layout_height="@dimen/dm060" />

    <LinearLayout
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm030"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_medal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/dm030"/>
        <TextView
                android:id="@+id/tv_medal_describe"
                android:layout_marginTop="@dimen/dm010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dm026"/>
    </LinearLayout>
</LinearLayout>