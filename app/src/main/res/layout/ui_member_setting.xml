<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@color/white"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
    <include layout="@layout/include_bottom"/>
    <RelativeLayout
            android:layout_above="@+id/v_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include layout="@layout/include_title"/>
        <RelativeLayout
                android:layout_marginTop="@dimen/dm133"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dm102">
                        <TextView
                                android:id="@+id/tv_member_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dm020"
                                android:text="@string/member_name"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/dm030"/>
                        <EditText
                                android:id="@+id/et_member_name"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@+id/tv_member_name"
                                android:layout_marginRight="@dimen/dm020"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textSize="@dimen/dm028"
                                android:textColor="@color/gray_3"
                                android:maxLength="20"
                                android:gravity="right"/>
                    </RelativeLayout>
                    <View
                            style="@style/view_line"/>
                    <RelativeLayout
                            android:id="@+id/rl_show_identity"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dm102">
                        <TextView
                                android:id="@+id/tv_member_identity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dm020"
                                android:text="@string/member_identity"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/dm030"/>
                        <!--<ImageView-->
                                <!--android:id="@+id/iv_show_identity"-->
                                <!--android:layout_alignParentRight="true"-->
                                <!--android:layout_marginRight="@dimen/dm020"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:src="@mipmap/right_arrow"/>-->
                        <TextView
                                android:id="@+id/tv_identity"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dm020"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/dm028"/>
                    </RelativeLayout>
                    <View
                            style="@style/view_line"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dm102">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dm020"
                                android:text="@string/is_black"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/dm030"/>
                        <ImageView
                                android:id="@+id/iv_is_black"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dm020"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/close"/>
                    </RelativeLayout>
                    <View
                            style="@style/view_line"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dm102">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dm020"
                                android:text="@string/is_noSpeaking"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/dm030"/>
                        <ImageView
                                android:id="@+id/iv_is_nospeaking"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dm020"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/close"/>
                        <TextView
                                android:id="@+id/tv_nospeaking_time"
                                android:layout_toLeftOf="@+id/iv_is_nospeaking"
                                android:layout_marginRight="@dimen/dm020"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/dm028"/>
                    </RelativeLayout>
                    <View
                            style="@style/view_line"/>
                    <RelativeLayout
                            android:id="@+id/rl_show_decoration"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dm102">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dm020"
                                android:text="@string/award_decoration"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/dm030"/>
                        <ImageView
                                android:id="@+id/iv_show_decoration"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dm020"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@mipmap/right_arrow"/>
                        <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_medal_icon"
                                android:layout_toLeftOf="@+id/iv_show_decoration"
                                android:layout_marginRight="@dimen/dm020"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dm020"
                            android:background="@mipmap/space_line_gray"/>
                    <TextView
                            android:id="@+id/tv_setting_save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm066"
                            android:layout_marginRight="@dimen/dm066"
                            android:background="@mipmap/bg_botton"
                            android:layout_marginTop="@dimen/dm200"
                            android:gravity="center"
                            android:text="@string/save"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dm030"/>
                </LinearLayout>
            </ScrollView>
            <FrameLayout
                    android:id="@+id/fl_decoration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></FrameLayout>
        </RelativeLayout>
        <FrameLayout
                android:id="@+id/fl_identity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
    </RelativeLayout>



</RelativeLayout>