<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm030"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dm030"
            android:layout_height="@dimen/dm030"
            android:background="@mipmap/live_show_iv" />

        <TextView
            android:id="@+id/tv_live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm014"
            android:text="2017-9-21 12:09:99"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/dm022" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dm020">

        <ImageView
            android:id="@+id/iv_live_img"
            android:layout_width="@dimen/dm220"
            android:layout_height="@dimen/dm164"
            android:scaleType="centerCrop"
              />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm164"
            android:layout_marginLeft="@dimen/dm026"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_action_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="艺术博物馆管理"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/dm032" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/dm010"-->
                <!--android:text="大大神"-->
                <!--android:textColor="@color/blue"-->
                <!--android:textSize="@dimen/dm028" />-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_topic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="话题：你好啊啊"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lecturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讲师：你大大"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="预告：你好啊啊你好啊你好啊啊你好啊啊啊啊啊"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>