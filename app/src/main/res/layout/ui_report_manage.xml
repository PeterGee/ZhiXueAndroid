<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
    <include layout="@layout/include_bottom"/>
    <RelativeLayout
            android:layout_above="@+id/v_bottom"
            android:layout_marginTop="@dimen/dm133"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm110"
                android:background="@mipmap/bg_report_bottom"/>
        <LinearLayout
                android:id="@+id/ll_bottom_choose"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100">
                <LinearLayout
                        android:id="@+id/ll_all_check"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/dm000"
                        android:layout_height="match_parent">
                        <ImageView
                                android:id="@+id/iv_all_checked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/unchecked_gray_report"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm020"
                                android:text="全选"
                                android:textColor="@color/gray_6"
                                android:textSize="@dimen/dm032"/>
                </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_delete"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/red_checked"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/delete_white"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm020"
                        android:text="删除"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dm032"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_cancel"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/blue"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/cancel_white"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm020"
                        android:text="取消"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dm032"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_bottom_delete"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm100">
            <TextView
                    android:id="@+id/tv_delete_multiSelect"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="@string/delete_multiSelect"
                    android:textColor="@color/blue_pwd"
                    android:textSize="@dimen/dm032"/>
            <TextView
                    android:id="@+id/tv_delete_all"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/blue"
                    android:text="@string/delete_all"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm032"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dm105"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.design.widget.TabLayout
                    android:id="@+id/tab_report"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm100"
                    app:tabTextColor="@color/gray_9"
                    app:tabIndicatorHeight="@dimen/dm004"
                    app:tabIndicatorColor="@color/blue"
                    app:tabSelectedTextColor="@color/gray_3">

            </android.support.design.widget.TabLayout>
            <View
                    style="@style/view_line" />
            <android.support.v4.view.ViewPager
                    android:id="@+id/vp_report"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm000">

            </android.support.v4.view.ViewPager>

        </LinearLayout>
        <FrameLayout
                android:id="@+id/fl_contener"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
    </RelativeLayout>


</RelativeLayout>