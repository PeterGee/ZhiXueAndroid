<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"
        android:background="@color/white"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                    android:layout_weight="1.5"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/vip_level"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/dm030"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/deadline"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dm030"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/state"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dm030"/>
        <TextView
                android:layout_weight="1.5"
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/purchase_type"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dm030"/>
        <TextView
                android:layout_weight="1.5"
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/apply_time"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dm030"/>
    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/dm030"
            style="@style/view_line"/>
    <com.risenb.studyknowledge.views.refreshlayout.MyRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_vip_apply_list"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm000">

        </android.support.v7.widget.RecyclerView>
    </com.risenb.studyknowledge.views.refreshlayout.MyRefreshLayout>

    <include layout="@layout/include_bottom"/>
</LinearLayout>