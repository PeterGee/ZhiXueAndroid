    <include layout="@layout/include_title" />

    <RelativeLayout
        android:paddingLeft="@dimen/dm022"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dm080"
            android:layout_height="@dimen/dm080"
            android:background="@mipmap/head_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm010"
            android:layout_toRightOf="@+id/iv_head"
            android:orientation="vertical"
            android:padding="@dimen/dm010">

            <TextView
                android:id="@+id/tv_nickname"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="sdfgsd"
                android:textSize="@dimen/dm026"
                android:textColor="@color/gray_3"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dm026"
                    android:textColor="@color/gray_9"
                    android:text="关注" />

                <TextView
                    android:id="@+id/tv_attention_num"
                    android:layout_marginLeft="@dimen/dm010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/dm026"
                    android:text="500" />
                <TextView
                    android:id="@+id/tv_money_reward"
                    android:background="@drawable/orange_box_bg"
                    android:padding="@dimen/dm003"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/dm024"
                    android:text="赏金50" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/dm050"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/peep_iv"
                android:drawablePadding="@dimen/dm005"
                android:textSize="@dimen/dm026"
                android:textColor="@color/gray_9"
                android:text="偷看人数" />

            <TextView
                android:id="@+id/tv_peep_num"
                android:layout_marginLeft="@dimen/dm015"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/dm026"
                android:text="500" />

        </LinearLayout>
    </RelativeLayout>

    <WebView
