<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm155"
                android:layout_marginLeft="@dimen/dm022"
                android:layout_marginRight="@dimen/dm022">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm092"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_college_img"
            android:layout_width="@dimen/dm124"
            android:layout_height="@dimen/dm092"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_college_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm022"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/dm028"/>
    </LinearLayout>

    <View
        style="@style/view_line"/>
</RelativeLayout>