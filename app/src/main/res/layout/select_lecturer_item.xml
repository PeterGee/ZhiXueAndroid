<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm130"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="@dimen/dm080"
            android:layout_height="@dimen/dm080"
            android:layout_marginLeft="@dimen/dm030"
            android:background="@mipmap/head_icon" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:text="经销天"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/dm026" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm030"
            android:text="ID:1243255"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm002"
        android:background="@color/gray_line" />

</LinearLayout>