<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/dm600"
        android:layout_height="@dimen/dm500"
        android:background="@drawable/menu_pop_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm040"
            android:layout_marginTop="@dimen/dm034"
            android:gravity="center_vertical"
            android:text="编辑投票项"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/dm032" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dm040"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_vote"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:padding="5dp"
                android:background="@null"
                android:hint="请输入内容"
                android:maxLength="100"
                android:textColor="@color/gray_6"
                android:textColorHint="@color/gray_9"
                android:textSize="@dimen/dm032" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_preserve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_bt_bg"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/dm032" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/blue"
                android:textSize="@dimen/dm032" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>