<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:id="@+id/ll_edit_college"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dm010"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/college_name_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_toRightOf="@+id/iv_college_name"
                    android:text="学院名称" />

                <!--<ImageView-->
                    <!--android:id="@+id/iv_right_college_name"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="@mipmap/right_arrow" />-->

                <EditText
                    android:id="@+id/et_college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="学院名称"
                    android:maxLength="15"
                    android:textColor="@color/gray_6"
                    android:textColorHint="@color/gray_9"
                    android:textSize="@dimen/dm028" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_registrant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/registrant_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_toRightOf="@+id/iv_registrant"
                    android:text="注册人" />

                <EditText
                    android:id="@+id/et_registrant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="注册人"
                    android:maxLength="15"
                    android:textColor="@color/gray_6"
                    android:textColorHint="@color/gray_9"
                    android:textSize="@dimen/dm028" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/bank_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_toRightOf="@+id/iv_bank_name"
                    android:text="修改开户行" />

                <EditText
                    android:id="@+id/et_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="开户行"
                    android:maxLength="15"
                    android:textColor="@color/gray_6"
                    android:textColorHint="@color/gray_9"
                    android:textSize="@dimen/dm028" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/card_num_iv" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_toRightOf="@+id/iv_card_number"
                    android:text="银行卡号" />

                <EditText
                    android:id="@+id/et_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="银行卡号"
                    android:inputType="number"
                    android:maxLength="15"
                    android:textColor="@color/gray_6"
                    android:textColorHint="@color/gray_9"
                    android:textSize="@dimen/dm028" />
            </RelativeLayout>

            <View style="@style/gray_line" />

            <RelativeLayout style="@style/release_common_rl">

                <ImageView
                    android:id="@+id/iv_college_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/college_sort" />

                <TextView
                    style="@style/release_common_tv"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_toRightOf="@+id/iv_college_sort"
                    android:text="学院类别" />

                <ImageView
                    android:id="@+id/iv_right_college_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/et_college_sort"
                    style="@style/release_common_tv_show"
                    android:layout_toLeftOf="@+id/iv_right_college_sort" />
            </RelativeLayout>

            <View style="@style/gray_line" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginTop="@dimen/dm030"
                android:text="学院背景图"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/dm030" />

            <LinearLayout
                android:id="@+id/ll_selected_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_college_back_img"
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm024"
                    android:src="@mipmap/uploading_iv"/>
            </LinearLayout>

            <View style="@style/gray_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginTop="@dimen/dm030"
                android:text="用户学院比例"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/dm030" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dm020"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/college_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/college_seek_bar"
                    android:thumb="@mipmap/college_ratio_iv" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm030"
                    android:layout_marginRight="@dimen/dm030"
                    android:layout_marginTop="@dimen/dm020"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/dm030" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="25"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/dm030" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="50"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/dm030" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="75"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/dm030" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="100"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/dm030" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:layout_marginTop="@dimen/dm018"
                android:text="入群设置"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/dm030" />

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/dm040"-->
                <!--android:layout_marginTop="@dimen/dm030"-->
                <!--android:orientation="horizontal"-->
                <!--android:textSize="@dimen/dm030">-->

                <!--<RadioButton-->
                    <!--android:id="@+id/item_option1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:button="@null"-->
                    <!--android:checked="true"-->
                    <!--android:drawableLeft="@drawable/group_tab"-->
                    <!--android:drawablePadding="@dimen/dm012"-->
                    <!--android:text="设为私密"-->
                    <!--android:textColor="@color/gray_3"-->
                    <!--android:textSize="@dimen/dm028" />-->

                <!--<RadioButton-->
                    <!--android:id="@+id/item_option2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/dm160"-->
                    <!--android:button="@null"-->
                    <!--android:drawableLeft="@drawable/group_tab"-->
                    <!--android:drawablePadding="@dimen/dm012"-->
                    <!--android:text="开放入群"-->
                    <!--android:textColor="@color/gray_3"-->
                    <!--android:textSize="@dimen/dm028" />-->
            <!--</LinearLayout>-->


            <RadioGroup
                android:id="@+id/rg_group_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm045"
                android:layout_marginLeft="@dimen/dm040"
                android:layout_marginTop="@dimen/dm030"
                android:orientation="horizontal"
                android:textSize="@dimen/dm030">

                <RadioButton
                    android:id="@+id/item_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/group_tab"
                    android:drawablePadding="@dimen/dm012"
                    android:text="付费入群"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/dm028" />

                <RadioButton
                    android:id="@+id/item_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm080"
                    android:button="@null"
                    android:drawableLeft="@drawable/group_tab"
                    android:drawablePadding="@dimen/dm012"
                    android:text="开放入群"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/dm028" />

                <RadioButton
                    android:id="@+id/item_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm080"
                    android:button="@null"
                    android:drawableLeft="@drawable/group_tab"
                    android:drawablePadding="@dimen/dm012"
                    android:text="审核入群"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/dm028" />
            </RadioGroup>

            <View style="@style/gray_line" />

            <RelativeLayout
                android:id="@+id/rl_stick"
                style="@style/release_common_rl">

                <TextView
                    android:text="学院私密状态"
                    style="@style/release_common_tv" />

                <com.risenb.studyknowledge.views.SwitchButton
                    android:id="@+id/sb_stick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:sb_checked="true"
                    app:sb_checked_color="@color/orange"
                    app:sb_show_indicator="false" />

            </RelativeLayout>

            <View style="@style/gray_line" />

            <LinearLayout
                android:background="@color/gray_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm120">

                <TextView
                    android:layout_margin="@dimen/dm020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/dm028"
                    android:text="设置私密状态后客户端将看不到学院信息，只有用户主动申请加入学院，管理员才能收到请求"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm024"
                android:layout_marginTop="@dimen/dm040"
                android:text="学院简介"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/dm030" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm250">

                <EditText
                    android:id="@+id/et_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:padding="@dimen/dm010"
                    android:layout_margin="@dimen/dm024"
                    android:background="@null"
                    android:hint="编辑学院简介"
                    android:maxLength="100"
                    android:textColor="@color/gray_6"
                    android:textColorHint="@color/gray_9"
                    android:textSize="@dimen/dm028" />
            </LinearLayout>

            <View style="@style/gray_line" />

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm080"
                android:layout_marginRight="@dimen/dm080"
                android:layout_marginTop="@dimen/dm086"
                android:background="@mipmap/bg_botton"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/dm032" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dm066"
                android:layout_marginTop="@dimen/dm030"
                android:gravity="center"
                android:padding="@dimen/dm030"
                android:text="返回"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/dm032" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>