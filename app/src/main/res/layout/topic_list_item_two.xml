<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_test_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<TextView-->
    <!--android:id="@+id/tv_test"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:padding="@dimen/dm030"-->
    <!--android:text="Test"-->
    <!--android:textSize="@dimen/dm050"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dm020">

        <ImageView
            android:id="@+id/iv_topic_img"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dm220"
            android:layout_height="@dimen/dm164"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm164"
            android:layout_marginLeft="@dimen/dm020"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dm010"
            android:paddingTop="@dimen/dm010">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_topic_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="艺术博物馆学校"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/dm030" />

                <TextView
                    android:id="@+id/tv_post_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_box_bg"
                    android:padding="@dimen/dm005"
                    android:text="全部/大家谈"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_topic_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID：1234567"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/dm026" />

                <TextView
                    android:id="@+id/tv_restrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:text="限制：VIP8"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已上架"
                        android:textColor="@color/gray_9"
                        android:textSize="@dimen/dm024" />

                    <View
                        android:layout_marginLeft="@dimen/dm012"
                        android:layout_marginRight="@dimen/dm012"
                        android:layout_width="@dimen/dm001"
                        android:layout_height="@dimen/dm018"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tv_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="免费"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/dm024" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_topic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2017-12-12"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/dm022" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>