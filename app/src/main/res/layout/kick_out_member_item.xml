<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm161">
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm160"
            app:contentView="@+id/content"
            app:rightMenuView="@+id/right">
        <LinearLayout
                android:id="@+id/content"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/iv_kick_member_head"
                    android:layout_width="@dimen/dm080"
                    android:layout_height="@dimen/dm080"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/head_icon"
                    android:layout_marginLeft="@dimen/dm020"/>
            <LinearLayout
                    android:layout_marginLeft="@dimen/dm020"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tv_kick_member_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/dm026"/>
                    <ImageView
                            android:id="@+id/iv_kick_member_level"
                            android:layout_marginLeft="@dimen/dm010"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/dm073"
                            android:layout_height="@dimen/dm024" />
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="@dimen/dm016"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kick_time"
                            android:textColor="@color/gray_9"
                            android:textSize="@dimen/dm024"/>
                    <TextView
                            android:id="@+id/tv_kick_time"
                            android:layout_marginLeft="@dimen/dm020"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_6"
                            android:textSize="@dimen/dm024"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_invite"
                    android:layout_width="@dimen/dm145"
                    android:layout_height="match_parent"
                    android:background="@mipmap/invite"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm064"
                    android:text="@string/invite"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>

    <View
            style="@style/view_line"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"/>
</LinearLayout>