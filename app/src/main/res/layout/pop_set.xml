<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_back"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#90000000" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="@dimen/dm020" >

        <TextView
            android:id="@+id/btn_pop_set_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dm020"
            android:text="菜单"
            android:textColor="@color/black"
            android:textSize="@dimen/dm024"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_pop_set_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm010"
            android:background="@drawable/bg_popset_btn"
            android:padding="@dimen/dm020"
            android:text="按钮5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_pop_set_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm010"
            android:background="@drawable/bg_popset_btn"
            android:padding="@dimen/dm020"
            android:text="按钮4"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_pop_set_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm010"
            android:background="@drawable/bg_popset_btn"
            android:padding="@dimen/dm020"
            android:text="按钮3"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_pop_set_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm010"
            android:background="@drawable/bg_popset_btn"
            android:padding="@dimen/dm020"
            android:text="按钮2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_pop_set_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm010"
            android:background="@drawable/bg_popset_btn2"
            android:padding="@dimen/dm020"
            android:text="按钮1"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>