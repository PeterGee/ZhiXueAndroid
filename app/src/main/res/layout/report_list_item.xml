<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm016"
            android:background="@mipmap/unchecked_gray_report"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dm220"
            android:layout_height="@dimen/dm164"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@mipmap/business_in_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_report_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/gray_2"
                        android:textSize="@dimen/dm032"/>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="@dimen/dm018"
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3人 举报"
                    android:textColor="@color/red_checked"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_report_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是名称"
                android:textColor="@color/blue_pwd"
                android:textSize="@dimen/dm022"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm004"
                android:text="2017-3-10 12:04"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dm022"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm005"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dm005"
                android:maxLines="2"
                android:text="@string/introduction"
                android:textColor="@color/gray_5d"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/view_line"/>
</LinearLayout>