<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_pop_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:paddingBottom="@dimen/dm040"
            android:paddingTop="@dimen/dm040"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm030"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帖子"
            android:textColor="@color/gray_5d" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:paddingTop="@dimen/dm020"
            android:paddingBottom="@dimen/dm020"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm030"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textColor="@color/gray_5d" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:paddingBottom="@dimen/dm040"
            android:paddingTop="@dimen/dm040"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm030"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投票"
            android:textColor="@color/gray_5d" />
    </LinearLayout>

</LinearLayout>