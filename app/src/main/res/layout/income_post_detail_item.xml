<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm141">
        <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm020"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/dm030"/>
            <TextView
                    android:id="@+id/tv_post_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm010"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/dm026"/>
        </LinearLayout>
    <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/ll_post_price"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="收入金额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/dm026"/>
            <TextView
                    android:id="@+id/tv_post_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm014"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/dm026"/>
        </LinearLayout>
        <TextView
                android:id="@+id/tv_post_time"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll_post_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/dm026"/>
    </RelativeLayout>

        <View
                style="@style/view_line"/>
</RelativeLayout>