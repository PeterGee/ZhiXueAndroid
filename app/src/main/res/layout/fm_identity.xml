<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/ll_bottom"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm100">
            <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textSize="@dimen/dm032"
                    android:textColor="@color/gray_6"/>
        <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm"
                android:textSize="@dimen/dm032"
                android:textColor="@color/blue"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_identity_list"
            android:layout_above="@+id/ll_bottom"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm303">
    </android.support.v7.widget.RecyclerView>
    <View
            android:id="@+id/bg_identity"
            android:layout_above="@+id/rv_identity_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_transparent"/>

</RelativeLayout>