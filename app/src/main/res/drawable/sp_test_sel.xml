<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>

            <!-- 设置四个角的半径 -->
            <corners android:bottomLeftRadius="@dimen/dm005" android:topLeftRadius="@dimen/dm005" />
            <!-- 背景颜色 -->
            <solid android:color="#0080cc" />
        </shape>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <!-- 设置四个角的半径 -->
                    <corners android:bottomLeftRadius="@dimen/dm005" android:topLeftRadius="@dimen/dm005" />
                    <!-- 背景颜色 -->
                    <solid android:color="#fff" />
                    <!-- 边框 -->
                    <stroke android:width="@dimen/dm001" android:color="#999" />
                </shape>
            </item>
            <item android:bottom="@dimen/dm001" android:left="@dimen/dm001" android:top="@dimen/dm001">
                <shape>
                    <!-- 设置四个角的半径 -->
                    <corners android:bottomLeftRadius="@dimen/dm005" android:topLeftRadius="@dimen/dm005" />
                    <!-- 背景颜色 -->
                    <solid android:color="#fff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>